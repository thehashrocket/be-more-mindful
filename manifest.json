{

  "description": "Creates a new tab with custom content.",
  "manifest_version": 2,
  "name": "Be More Mindful",
  "version": "1.0",
  "homepage_url": "http://github.com/thehashrocket",
  "icons": {
    "48": "icons/noun_1178590_cc.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/noun_1178590_cc.png"
  },

  "permissions": [
    "tabs",
    "topSites"
  ],

  "chrome_url_overrides" : {
	"newtab": "home.html"
  },

  "applications": {
    "gecko": {
      "strict_min_version": "54.0a1"
    }
  }

}
